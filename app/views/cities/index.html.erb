<%- model_class = City -%>
<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
  <li class="active"><%= t(:'navbar.cities') %></li>
  <% if can? :create, RouteProfile %>
    <li class="pull-right"><%= link_to t(:profiles), route_profiles_path, :class => "profiles btn btn-mini btn-primary pull-right" %></li>

  <% end %>
  <% if can? :create, City %>
    <li class="pull-right"><%= link_to t(:add_city), new_city_path, :class => "add-city btn btn-mini btn-success pull-right" %></li>

  <% end %>
</ul>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:state_province) %></th>
    <th><%= model_class.human_attribute_name(:country_code) %></th>
    <th></th>

  </tr>
  </thead>
  <% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td><%= city.state_province %></td>
      <td><%= city.country_code %></td>
      <td>
        <%= link_to t(:details), city_path(city), :class => "btn btn-mini" %>

        <% if can? :update, city %>
          <%= link_to t(:edit), edit_city_path(city), :class => "btn btn-mini btn-primary" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<br/>

