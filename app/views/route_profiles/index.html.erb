<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
  <li class="active"><%= t(:'navbar.route_profiles') %></li>
</ul>

<div class="row-fluid">
  <ul class="thumbnails">
    <% @route_profiles.each do |route_profile| %>

      <li class="span4">
        <div class="thumbnail">
          <img style="width: 300px; height: 200px;" src="<%= route_profile.image %>">

          <div class="caption">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#profile<%= route_profile.id %>_en" data-toggle="tab"><%= t :english %></a></li>
              <li><a href="#profile<%= route_profile.id %>_nl" data-toggle="tab"><%= t :nederlands %></a></li>
            </ul>

            <div class="tab-content">
              <div class="tab-pane active" id="profile<%= route_profile.id %>_en">
                <h3><%= route_profile.name_en %></h3>

                <p><%= route_profile.description_en %></p>
              </div>
              <div class="tab-pane" id="profile<%= route_profile.id %>_nl">
                <h3><%= route_profile.name_nl %></h3>

                <p><%= route_profile.description_nl %></p>
              </div>

            </div>

            <p>
              <%= link_to t(:'.routes'), route_profile_routes_path(route_profile), :class => "btn btn-primary" %>
              <%= link_to t(:'.edit'), edit_route_profile_path(route_profile), :class => "btn" %>
            </p>
          </div>
        </div>
      </li>

    <% end %>
  </ul>
</div>

<br/>

<%= link_to 'New Route profile', new_route_profile_path %>
