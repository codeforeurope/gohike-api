<%= simple_form_for(@route, :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs clearfix">

    <div class="span5">
      <%= f.association :city, :collection => cities_curated, :include_blank => false %>
      <%= f.input :route_profile_id, :wrapper_html => {:class => ("hidden" if @route.city.blank?)} do %>
        <%= f.select :route_profile_id, options_from_collection_for_select(@profiles, :id, :name, :selected => @route.route_profile_id), :include_blank => false %>
      <% end %>
      <%= f.input :image %>
    </div>

    <div class="span9">

      <%= render :partial => "shared/localized_attributes", :locals => {:resource => @route, :f => f} %>

    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
