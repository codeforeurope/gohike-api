<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
  <li><%= link_to t(:'navbar.route_profiles'), route_profiles_path %> <span class="divider">/</span></li>
  <li class="active"><%= @route_profile.name_en %></li>
</ul>
<div class="row-fluid">


  <div class="span6">
    <h4><%= t :details %>
    <%= link_to t(:edit_profile), edit_route_profile_path(@route_profile), :class => "edit-profile btn btn-mini btn-primary pull-right" %>
    <%= link_to t(:add_route), new_route_profile_route_path , :class => "add-route btn btn-mini btn-success pull-right"%>

    </h4>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#profile_en" data-toggle="tab"><%= t :english %></a></li>
      <li><a href="#profile_nl" data-toggle="tab"><%= t :nederlands %></a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="profile_en">
        <h5><%= @route_profile.name_en %></h5>

        <p><%= @route_profile.description_en %></p>
      </div>
      <div class="tab-pane" id="profile_nl">
        <h5><%= @route_profile.name_nl %></h5>

        <p><%= @route_profile.description_nl %></p>
      </div>

    </div>
  </div>
  <div class="span5">
    <h4><%= t :icon_and_image %></h4>
    <img style="width: 300px; height: 200px;" src="<%= @route_profile.image %>">
  </div>
</div>
<div class="row-fluid">
  <h4><%= t :routes %> </h4>
  <ul class="thumbnails">
    <% @routes.each do |route| %>

      <li class="span4">
        <div class="thumbnail">
          <img style="width: 300px; height: 200px;" src="<%= route.image %>">

          <div class="caption">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#route<%= route.id %>_en" data-toggle="tab"><%= t :english %></a></li>
              <li><a href="#route<%= route.id %>_nl" data-toggle="tab"><%= t :nederlands %></a></li>

            </ul>

            <div class="tab-content">
              <div class="tab-pane active" id="route<%= route.id %>_en">
                <h3><%= route.name_en %></h3>

                <p><%= route.description_en %></p>
              </div>
              <div class="tab-pane" id="route<%= route.id %>_nl">
                <h3><%= route.name_nl %></h3>

                <p><%= route.description_nl %></p>
              </div>

            </div>

            <p>
              <%= link_to t(:'.waypoints'), route_profile_route_path(route, @route_profile), :class => "btn btn-primary" %>
              <%= link_to t(:'.edit'), edit_route_profile_route_path(route, @route_profile), :class => "btn" %>
            </p>
          </div>
        </div>
      </li>

    <% end %>
  </ul>
</div>

<br/>

