<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
    <li class="active"><%= t(:'navbar.routes') %></li>
</ul>
<div class="row-fluid">
  <h4><%= t :routes %> <%= link_to t(:add_route), new_route_path , :class => "add-route btn btn-mini btn-success pull-right"%></h4>
  <ul class="thumbnails">
    <% @routes.each do |route| %>

      <li class="span4">
        <div class="thumbnail">
          <img style="width: 300px; height: 200px;" src="<%= route.image.mobile %>">

          <div class="caption">
            <ul class="nav nav-tabs">
              <%= render :partial => "shared/translation_tabs", :locals => {:locale => I18n.locale, :resource => route, :active => true} %>
              <% route.translations.each do |translation| %>
                <%= render :partial => "shared/translation_tabs", :locals => {:locale => translation.locale, :resource => route} if (translation.locale != I18n.locale) %>
              <% end %>
            </ul>

            <div class="tab-content">
              <div class="tab-pane active" id="<%= translation_tab_id(route, locale) %>">
                <h5><%= route.name %></h5>

                <p><%= route.description %></p>
              </div>
              <% route.translations.each do |translation| %>
                <%= render :partial => "shared/translation_values", :locals => {:translation => translation, :resource => route} %>
              <% end %>

            </div>

            <p>
              <%= link_to t(:'.waypoints'), route_path(route), :class => "btn btn-primary" %>
              <%= link_to t(:'.edit'), edit_route_path(route), :class => "btn" %>
            </p>
          </div>
        </div>
      </li>

    <% end %>
  </ul>
</div>

<br/>

