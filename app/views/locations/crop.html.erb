<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
  <li><%= link_to t(:'navbar.locations'), locations_path %> <span class="divider">/</span></li>
  <li class="active"><%= link_to  @location.name_en , location_path(@location) %></li>
</ul>

<%= simple_form_for @location do |f| %>
<div class="row-fluid">

  <div class="original-image">
    <h4><%= t :crop_image %></h4>
    <%= image_tag @location.image_url, id: "cropbox" %>
  </div>

  <div class="preview-image">
    <h4><%= t :preview %></h4>

    <div style="width:285px; height:190px; overflow:hidden; ">
      <%= image_tag @location.image_url, :id => "preview" %>
    </div>
    <div class="form-actions">
      <%= f.submit t(:crop), :class => "btn btn-primary" %>
    </div>
  </div>
</div>

  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %>
  <% end %>

<% end %>