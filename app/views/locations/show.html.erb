<ul class="breadcrumb">
  <li><%= link_to t(:home), home_path %> <span class="divider">/</span></li>
  <li><%= link_to t(:'navbar.locations'), locations_path %> <span class="divider">/</span></li>
  <li class="active"><%= @location.name_en %></li>
</ul>
<p id="notice"><%= notice %></p>
<div class="row-fluid">

  <div class="span6">
    <h4><%= t :details %>
      <%= link_to t(:edit), edit_location_path(@location), :class => "btn btn-mini btn-primary pull-right" %>
    </h4>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#location_en" data-toggle="tab"><%= t :english %></a></li>
      <li class=""><a href="#location_nl" data-toggle="tab"><%= t :nederlands %></a></li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane active" id="route_en">
        <h5><%= @location.name_en %></h5>

        <p><%= @location.description_en %></p>
      </div>
      <div class="tab-pane" id="route_nl">
        <h5><%= @location.name_nl %></h5>

        <p><%= @location.description_nl %></p>
      </div>

    </div>
  </div>
  <div class="span5">
    <h4><%= t :icon_and_image %>
      <%= link_to t(:remove), @location, method: :delete, data: {confirm: 'Are you sure?'} ,:class => "btn btn-mini btn-danger pull-right" if @location.waypoints.empty? %>
    </h4>
    <img style="width: 300px; height: 200px;" src="<%= @location.image %>">
  </div>
</div>
<div class="row-fluid">

  <div class="span5">
    <h4><%= t :address_and_coordinates %></h4>
    <p>
      <b>Address:</b>
      <%= @location.address %>
    </p>

    <p>
      <b>City:</b>
      <%= @location.city %>
    </p>

    <p>
      <b>Postal code:</b>
      <%= @location.postal_code %>
    </p>
    <p>
      <b>Latitude:</b>
      <%= @location.latitude %>
    </p>

    <p>
      <b>Longitude:</b>
      <%= @location.longitude %>
    </p>
  </div>
  <div class="span4">
    <h4><%= t :map %></h4>
    <% options = {
        :map_options => {
            :auto_adjust => false,
            zoomControl: true,
            zoom: 16,
            streetViewControl: false,
            scaleControl: false,
            rotateControl: false,
            mapTypeControl: false,
            panControl: false,
            center_latitude: @location.latitude,
            center_longitude: @location.longitude

        },
        :markers => {:data => @markers, :options => {:do_clustering => true}}
    }
    %>
    <%= gmaps(options) %>
  </div>
</div>