<%- model_class = Location -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %>

    <%= link_to t(:add_location), new_location_path ,:class => "btn btn-large btn-success pull-right"%>
  </h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name)%></th>
    <th><%= model_class.human_attribute_name(:address)%></th>
    <th><%= model_class.human_attribute_name(:postal_code)%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %> </td>
      <td><%= location.address %></td>
      <td><%= location.postal_code %></td>
      <td><%= link_to t(:details), location_path(location) ,:class => "btn btn-mini"%></td>
      <td><%= link_to t(:edit), edit_location_path(location) ,:class => "btn btn-mini btn-primary"%></td>

    </tr>
  <% end %>
</table>

<br/>

